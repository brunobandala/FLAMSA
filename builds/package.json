{
    "name": "com.proyectos.pruebafletes",
    "displayName": "FletesApp",
    "version": "1.0.0",
    "description": "test app para fletes",
    "build": {
        "appId": "com.app.flamsa",
        "files": "./dist/**/*",
        "productName": "FLAMSA"
    },
    "scripts": {
        "assemble-apk-dev": "npx copyfiles builds/platforms/android/app/build/outputs/apk/debug/*.apk hdfhghgfzdhddfghh",
        "construct-cordova-dev": "npm run build-cordova-dev && npm run create-apk-dev",
        "create-apk-dev": "npx copyfiles package.json builds && cd builds && npm i && cordova build android --verbose && cd ../ ",
        "build-cordova-dev": "npm run build-dev && npx copyfiles 'dist/*.js' 'builds/www' && npx copyfiles 'dist/assets/*.*' 'builds/www/assets'",
        "serve-dev": "npm run build-dev && npm-run-all -p webpack-run-dev start-desktop-dev",
        "start-desktop-dev": "wait-on http-get://localhost:9001/ && electron ./electron.init.js  --web",
        "build-dev": "webpack",
        "webpack-run-dev": "webpack-dev-server",
        "pack": "npm run build-dev && electron-builder --dir",
        "dist": "npm run build-dev && electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "devDependencies": {
        "@types/angular": "^1.6.32",
        "@types/core-js": "^2.5.0",
        "@types/node": "^8.0.31",
        "awesome-typescript-loader": "^5.0.0-1",
        "babel-core": "^6.22.1",
        "babel-loader": "^7.0.0",
        "babel-preset-env": "^1.7.0",
        "css-loader": "^2.0.0",
        "electron": "^3.0.7",
        "electron-builder": "^20.28.4",
        "electron-reload": "^1.4.0",
        "extract-loader": "^1.0.2",
        "extract-text-webpack-plugin": "^3.0.0",
        "file-loader": "^1.1.11",
        "html-loader": "^0.5.5",
        "html-webpack-plugin": "^3.2.0",
        "image-webpack-loader": "^4.6.0",
        "node-sass": "^4.9.0",
        "npm-run-all": "^4.1.5",
        "portfinder": "^1.0.20",
        "raw-loader": "^0.5.1",
        "reflect-metadata": "^0.1.12",
        "sass-loader": "^6.0.4",
        "style-loader": "^0.23.1",
        "tapable": "^1.1.1",
        "to-string-loader": "^1.1.5",
        "typescript": "^2.5.3",
        "uglifyjs-webpack-plugin": "^2.0.1",
        "wait-on": "^3.2.0",
        "webpack": "^4.26.1",
        "webpack-cli": "^3.1.2",
        "webpack-dev-server": "^3.1.10"
    },
    "dependencies": {
        "@angular/animations": "^7.2.3",
        "@angular/common": "^4.4.4",
        "@angular/compiler": "^4.4.4",
        "@angular/core": "^4.4.4",
        "@angular/forms": "4.4.7",
        "@angular/http": "^7.2.3",
        "@angular/platform-browser": "^4.4.4",
        "@angular/platform-browser-dynamic": "^4.4.4",
        "@angular/router": "^4.4.4",
        "@material/form-field": "^0.43.0",
        "angular2-cookie": "^1.2.6",
        "angular2-template-loader": "^0.6.2",
        "animate.css-js": "0.0.9",
        "cordova-android": "^7.1.4",
        "cordova-plugin-whitelist": "^1.3.3",
        "core-js": "^2.5.1",
        "lodash": "^4.17.11",
        "material-components-web": "^0.43.0",
        "ng2-datepicker": "^3.1.1",
        "rxjs": "^5.4.3",
        "simple-pdf-viewer": "^2.0.3",
        "tapable": "^1.1.1",
        "zone.js": "^0.8.18"
    },
    "cordova": {
        "plugins": {
            "cordova-plugin-whitelist": {}
        },
        "platforms": [
            "android"
        ]
    }
}
